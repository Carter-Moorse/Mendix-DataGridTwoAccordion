<?xml version="1.0" encoding="utf-8"?>
<widget id="auraq.datagridtwoaccordion.DataGridTwoAccordion" pluginWidget="true" needsEntityContext="true" offlineCapable="true"
        supportedPlatform="Web"
        xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>Data grid 2 accordion</name>
    <description>Add show/hide accordion data grid 2 rows</description>
    <icon/>
    <properties>
        <propertyGroup caption="General">
            <propertyGroup caption="General">
                <property key="type" type="enumeration" defaultValue="observer">
                    <caption>Type</caption>
                    <description></description>
                    <enumerationValues>
                        <enumerationValue key="observer">Observer</enumerationValue>
                        <enumerationValue key="trigger">Trigger</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="attributename" type="string" defaultValue="data-panel-open">
                    <caption>Attribute name</caption>
                    <description>Name of attribute to trigger state</description>
                </property>
            </propertyGroup>
            <propertyGroup caption="Observer">
                <property key="observertype" type="enumeration" defaultValue="trigger">
                    <caption>Type</caption>
                    <description></description>
                    <enumerationValues>
                        <enumerationValue key="trigger">Trigger (placed on same row)</enumerationValue>
                        <enumerationValue key="onselect">On row select</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="observercontent" type="widgets" required="false">
                    <caption>Content</caption>
                    <description></description>
                </property>
                <property key="observerselectedclass" type="boolean" defaultValue="true">
                    <caption>Use row selected class?</caption>
                    <description></description>
                </property>
                <property key="observerrowclassopen" type="expression" defaultValue="''">
                    <caption>Row class</caption>
                    <description></description>
                    <returnType type="String" />
                </property>
                <property key="observercolclassopen" type="expression" defaultValue="''">
                    <caption>Column class</caption>
                    <description></description>
                    <returnType type="String" />
                </property>
            </propertyGroup>
            <propertyGroup caption="Trigger">
                <property key="triggertype" type="enumeration" defaultValue="button">
                    <caption>Type</caption>
                    <description></description>
                    <enumerationValues>
                        <enumerationValue key="button">Button</enumerationValue>
                        <enumerationValue key="link">Link</enumerationValue>
                        <enumerationValue key="custom">Custom</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="triggerbuttonstyle" type="enumeration" defaultValue="default">
                    <caption>Style</caption>
                    <description></description>
                    <enumerationValues>
                        <enumerationValue key="default">Default</enumerationValue>
                        <enumerationValue key="inverse">Inverse</enumerationValue>
                        <enumerationValue key="primary">Primary</enumerationValue>
                        <enumerationValue key="info">Info</enumerationValue>
                        <enumerationValue key="success">Success</enumerationValue>
                        <enumerationValue key="warning">Warning</enumerationValue>
                        <enumerationValue key="danger">Danger</enumerationValue>
                    </enumerationValues>
                </property>
                <property key="triggercaption" type="textTemplate" required="false">
                    <caption>Caption</caption>
                    <description></description>
                </property>
                <property key="triggertooltip" type="textTemplate" required="false">
                    <caption>Tooltip</caption>
                    <description></description>
                </property>
                <property key="triggeropendefault" type="expression" defaultValue="false">
                    <caption>Open by default?</caption>
                    <description></description>
                    <returnType type="Boolean" />
                </property>
                <property key="triggercustom" type="widgets" required="false">
                    <caption>Custom</caption>
                    <description></description>
                </property>
                <property key="triggerdelay" type="integer" defaultValue="0">
                    <caption>Delay (ms)</caption>
                    <description></description>
                </property>
            </propertyGroup>
            <propertyGroup caption="Open">
                <property key="triggericonopen" type="icon" required="false">
                    <caption>Trigger icon open</caption>
                    <description></description>
                </property>
                <property key="triggerclassopen" type="expression" defaultValue="'open'">
                    <caption>Trigger class open</caption>
                    <description></description>
                    <returnType type="String" />
                </property>
            </propertyGroup>
            <propertyGroup caption="Closed">
                <property key="triggericonclosed" type="icon" required="false">
                    <caption>Trigger icon closed</caption>
                    <description></description>
                </property>
                <property key="triggerclassclosed" type="expression" defaultValue="''">
                    <caption>Trigger class closed</caption>
                    <description></description>
                    <returnType type="String" />
                </property>
            </propertyGroup>
        </propertyGroup>
    </properties>
</widget>